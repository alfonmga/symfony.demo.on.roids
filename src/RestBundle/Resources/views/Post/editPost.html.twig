{% extends 'RestBundle::api_base_layout.html.twig' %}

{% block title "Edit post" %}

{% block content %}
    <h1 class="title">Edit Post #{{ form.vars.value.id }}</h1>
    <p>
        <a href="{{ path('api_v1_get_posts') }}">Back to post list</a>
        <a href="{{ path('api_v1_get_post', {'id': form.vars.value.id}) }}" style="float: right">View post #{{ form.vars.value.id }}</a>
    </p>
    <form action="{{ url('api_v1_edit_post', {'id': form.vars.value.id}) }}" method="POST" {{ form_enctype(form) }}>
        <input type="hidden" name="_method" value="patch" />
        {{ form_widget(form) }}
        <div class="custom-form">
            <input type="submit" value="Edit post">
        </div>
    </form>
{% endblock %}